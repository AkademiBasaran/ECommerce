@model IEnumerable<Cinema>;
@{
    ViewData["Title"] = "Sinema Listesi";
}


<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Logo)</th>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Description)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle"
                                 src="@cinema.Logo"
                                 alt="@cinema.Name"
                                 style="max-width=100px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(m => cinema.Name)</td>
                        <td class="align-middle">@Html.DisplayFor(m => cinema.Description)</td>
                        <td class="align-middle">

                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@cinema.Id"><i class="bi bi-pencil-square"></i>Güncelle</a>|
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@cinema.Id"><i class="bi bi-eye"></i>Görüntüle</a>|
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cinema.Id"><i class="bi bi-trash"></i>Sil</a>


                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>


@await Html.PartialAsync("_CreateItem", "Cinemas");



